{
    "name":"ShopCSV",
    "description":"Create and download csv files from pages you visit for your e-commerce platform",
    "version":"1.0.0",
    "icons":{
        "32":"./images/icons/comma-32.png",
        "64":"./images/icons/comma-64.png",
        "128":"./images/icons/comma-128.png",
        "256":"./images/icons/comma-256.png",
        "512":"./images/icons/comma-512.png",
        "1024":"./images/icons/comma-1024.png"
    },
    "browser_action":{
        "default_popup":"./html/popup.html"
    },
    "content_scripts":[
        {
            "matches":[
                "<all_urls>"
            ],
            "js":["./js/content.js"]
        }
    ],
    "background":{
        "scripts":["./js/background.js"]
    },
    "options_page":"./html/options.html",
    "permissions":[
        "tabs",
        "downloads"
    ],
    "manifest_version":2
}