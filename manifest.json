{
    "name":"ShopCSV",
    "description":"Create and download csv files from pages you visit for your e-commerce platform",
    "version":"1.0.0",
    "icons":{
        "1024":"./images/icons/shopCSV.png"
    },
    "browser_action":{
        "default_popup":"./html/popup.html"
    },
    "content_scripts":[
        {
            "matches":[
                "<all_urls>"
            ],
            "js":["./js/content.js"]
        }
    ],
    "background":{
        "scripts":["./js/background.js"]
    },
    "permissions":[
        "tabs",
        "downloads"
    ],
    "manifest_version":2
}